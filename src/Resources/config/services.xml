<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Short Description Entity Definition -->
        <service id="HMnetShortDescription\Core\Content\ShortDescription\ShortDescriptionDefinition">
            <tag name="shopware.entity.definition" entity="hmnet_short_description" />
        </service>

        <!-- Short Description Translation Definition -->
        <service id="HMnetShortDescription\Core\Content\ShortDescription\Aggregate\ShortDescriptionTranslation\ShortDescriptionTranslationDefinition">
            <tag name="shopware.entity.definition" entity="hmnet_short_description_translation" />
        </service>

        <!-- Product Extension for Short Description -->
        <service id="HMnetShortDescription\Core\Content\Product\ShortDescriptionProductExtension">
            <tag name="shopware.entity.extension"/>
        </service>
    </services>
</container>